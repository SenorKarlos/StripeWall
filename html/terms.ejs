    <%- include('./includes/head.ejs') %>

    <div class="rcorners1 background">
      <center>
        <div>
          <div>
            <br>
            <h1><font color="<%= title_color %>">Welcome <%= username %> </font></h1>
            <h2><font color="<%= title_color %>">Description of Services</font></h2>
            <%- include('../config/pages/fullDescription.ejs') %>
            <br>
          </div>
          <div>
            <form method="POST">
              <input name="userid" type="hidden" value="<%= userid %>">
              <h2><font color="<%= highlight_color %>">Terms of Service</font></h2>
              <div>
                <%- include('../config/pages/fullTerms.ejs') %>
                <input type="checkbox" onclick="agreeButton()" id="terms" name="agree" value="1">
                <label><strong><font color="<%= text_color %>">I have read the <b>terms of service</b></font></strong></label>
              </div>
              <br>
              <input name="agree" id="agreebtn" disabled type="submit" value="I Agree">
            </form>
          </div>
        </div>
      </center>
    </div>

    <script>
      function agreeButton() {
        if (document.getElementById('terms').checked) {
          document.getElementById('agreebtn').disabled = false;
        }
        else {
          document.getElementById('agreebtn').disabled = true;
        }
      }
    </script>
    <%- include('./includes/end.ejs') %>